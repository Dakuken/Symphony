{% extends 'base-connexion.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block connexion %}
    <section class="">
        <div class="mx-auto flex flex-col items-center justify-center px-6 py-8 md:h-screen lg:py-0">
            <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-[#005880] border-gray-700">
                <div class="p-6 space-y-4 sm:p-8 md:space-y-6">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-white md:text-2xl">
                        {{ "signIn.sentence" | trans }}
                    </h1>
                        <form action="{{ path('app_login') }}" method="post" class="space-y-4 md:space-y-6">
                        <div>
                            <label for="email" class="mb-2 block text-sm font-medium text-white">Email</label>
                            <input value="{{ last_username }}" type="email" name="_username" id="username" class="bg-[#008695] border border-gray-300 text-white sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5  focus:ring-blue-500 focus:border-blue-500 placeholder-white" placeholder="name@company.com" required="">
                        </div>
                        <div>
                            <label for="password" class="mb-2 block text-sm font-medium text-white">{{ "password" | trans }}</label>
                            <input type="password" name="_password" id="password" placeholder="••••••••" class="bg-[#008695] border border-gray-300 text-white sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500 placeholder-white" required="">
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-start">
                                <div class="flex h-5 items-center">
                                    <input id="remember" aria-describedby="remember" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-[#008695] focus:ring-3 focus:ring-primary-300 focus:ring-primary-600 ring-offset-gray-800">
                                </div>
                                <div class="ml-3 text-sm">
                                    <label for="remember" class="text-gray-300">{{ "login.remember" | trans }}</label>
                                </div>
                            </div>
                            <a href="#" class="text-sm font-medium text-primary-600 text-primary-500 hover:underline">{{ "forgotPassword" | trans }}</a>
                        </div>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <button type="submit" class="w-full rounded-lg px-5 text-center text-sm font-medium text-white bg-primary-600 py-2.5 hover:bg-primary-700 focus:ring-primary-300 focus:ring-primary-800 focus:outline-none focus:ring-4">{{ "login.button" | trans }}</button>
                        <p class="text-sm font-light text-gray-400">
                            {{ "signUp.notAccount" | trans}} <a href="{{ path('app_inscription', {'_locale': app.request.locale}) }}" class="font-medium text-primary-600 text-primary-500 hover:underline">{{ "signUp.notAccountClick" | trans }}</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}